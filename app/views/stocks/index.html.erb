<div class='container-fluid'>
  <h3 class='pt-4'>Stocks</h3>
  <div class='row'>
    <%= content_tag 'table', class: 'table table-striped datatable' do %>
      <thead>
        <tr>
          <th>Symbol</th>
          <th>Name</th>
          <th>Dividend</th>
          <th>Market</th>
        </tr>
      </thead>
      <tbody>
        <% @stocks.each do |stock| %>
          <tr>
            <td><%= link_to stock.symbol, stock %></td>
            <td><%= link_to stock.name, stock %></td>
            <td><%= link_to stock.dividend, stock %></td>
            <td><%= link_to stock.market, stock %></td>
          </tr>
        <% end -%>
      </tbody>
    <% end %>
  </div>
  <hr>
  <%= link_to new_stock_path, class: 'btn btn-primary btn-lg' do %>
    <%= icon(:fas, :plus) %> New
  <% end %>
</div>
