<div class='container-fluid'>
  <h2 class='pt-4'>Azioni</h2>
  <hr>
  <div class='row'>
    <%= content_tag 'table', class: 'table table-striped datatable' do %>
      <thead>
        <tr>
          <th>Simbolo</th>
          <th>Nome</th>
          <th>Quotazione</th>
          <th>Data quotazione</th>
          <th>Data check</th>
          <th>Dividendo</th>
          <th>Mercato</th>
        </tr>
      </thead>
      <tbody>
        <% @stocks.each do |stock| %>
          <tr>
            <td><%= link_to stock.symbol, stock %></td>
            <td><%= link_to stock.name, stock %></td>
            <td><%= stock.quotation %></td>
            <td><%= l stock.quotation_date, format: "%d-%m-%Y" unless stock.quotation_date.nil? %></td>
            <td><%= l stock.quotation_check, format: "%d-%m-%Y %H:%M" unless stock.quotation_check.nil? %></td>
            <td><%= stock.dividend %></td>
            <td><%= stock.market %></td>
          </tr>
        <% end -%>
      </tbody>
    <% end %>
  </div>
  <hr>
  <%= link_to new_stock_path, class: 'btn btn-primary btn-lg' do %>
    <%= icon(:fas, :plus) %> Nuova azione
  <% end %>
</div>
