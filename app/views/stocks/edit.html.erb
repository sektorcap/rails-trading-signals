<div class='container-fluid'>
  <h3 class='pt-4'>Editing stock</h3>
  <div class='row'>

    <div class='col-md-3'>
      <div class='list-group'>
        <%= link_to stocks_path, class: 'list-group-item list-group-item-action' do %>
          <%= icon(:fas, :list) %> Lista Azioni
        <% end %>
        <%= link_to @stock, class: 'list-group-item list-group-item-action' do %>
          <%= icon(:fas, :eye) %> Mostra Azione
        <% end %>
        <%= link_to @stock, data: {confirm: 'Are you sure?'},
              method: :delete, class: 'list-group-item list-group-item-danger list-group-item-action' do %>
          <%= icon(:fas, :trash) %> Cancella Azione
        <% end %>
      </div>
    </div>

    <div class='col-md-9'>
      <%= render 'form' %>
    </div>

  </div>
</div>
